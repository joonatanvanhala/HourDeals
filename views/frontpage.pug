      section#contact_container.container-fluid
        .row(style='position: relative')
          .col-sm-6
            #contact_text.text_bottom
              h3 Get in touch!
              p
                | If you have any question, comment or something else in your mind, please fill out the contact form.
            form#contact_form
              .form-group
                label(for='full_name') Name
                input#name_input.form-control(type='email', placeholder='Your name')
              .form-group
                label(for='contact_email_address') Email address
                input#email_address_input.form-control(type='email', placeholder='name@example.com')
              .form-group
                label(for='contact_messagelabel') Message
                textarea#message_input.form-control(rows='3', placeholder='Write your message here')
              button#button_send.btn.btn-lg(type='submit') Send
      section#login_container.container-fluid
        #login_sheet.rounded.justify-content-center.mx-auto(style='position: relative')
          ul#logintab.nav.nav-tabs.nav-fill.navbar-dark.col-lg-12(role='tablist')
            li.nav-item
              a#log-in-tab.nav-link.active(data-toggle='tab', href='#log-in', role='tab', aria-controls='log-in', aria-selected='true') Log In
            li.nav-item
              a#register-tab.nav-link(data-toggle='tab', href='#register', role='tab', aria-controls='register', aria-selected='false') Register
          #myTabContent.tab-content
            #log-in.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='log-in')
              form#login_form(method='POST', action='/login')
                .form-group
                  label(for='login_username') Username
                  input#form_input.form-control(type='text', placeholder='Username', name = 'username')
                .form-group
                  label(for='login_password') Password
                  input#form_input.form-control(type='password', placeholder='●●●●●●●●●●●', name = 'password')
                button#button_log-in.btn.btn-lg.btn-block(type='submit') Login
            #register.tab-pane.fade(role='tabpanel', aria-labelledby='register')
              form#register_form(method='post', action='/register')
                .form-group
                  label(for='register_companyname') Company name
                  input#form_input.form-control(type='text', name='companyname', placeholder='Company name')
                .form-group
                  label(for='register_username') Company name
                  input#form_input.form-control(type='text', name='companyname', placeholder='Company name')
                .form-group
                  label(for='register_cityname') City
                  input#form_input.form-control(type='text', name='city', placeholder='City')
                .form-group
                  label(for='register_address') Address
                  input#form_input.form-control(type='text', name='address', placeholder='Address')
                .form-group
                  label(for='register_postcode') Postcode
                  input#form_input.form-control(type='text', name='postcode', placeholder='Postcode')
                .form-group
                  label(for='register_email') Email
                  input#form_input.form-control(type='email', name='email', placeholder='Email')
                .form-group
                  label(for='register_ytunnus') Y-tunnus
                  input#form_input.form-control(type='text', name='ytunnus', placeholder='Y-tunnus')
                .form-group
                  label(for='login_password') Password
                  input#form_input.form-control(type='password', name='password', placeholder='●●●●●●●●●●●')
                .form-group
                  label(for='login_password2') Verify password
                  input#form_input.form-control(type='password', name='password2', placeholder='●●●●●●●●●●●')
                button#button_register.btn.btn-lg.btn-block(type='submit') Register
