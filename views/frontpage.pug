      link(href='https://fonts.googleapis.com/css?family=Nunito', rel='stylesheet')
      title HourDeals | Welcome!
    body#body(data-spy='scroll', data-target='.navbar')
      nav#top.navbar.navbar-expand-lg.navbar-dark.scrolling-navbar.fixed-top.bg-nav
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbar_collapse', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbar_collapse.collapse.navbar-collapse.justify-content-between
          ul#navbartext.navbar-nav.navbar-left
            li.nav-item
              a.nav-link(href='#body') Home
            li.nav-item
              a.nav-link(href='#about_container') About
            li.nav-item
              a.nav-link(href='#contact_container') Contact us
            li.nav-item
              a.nav-link(href='#login_container') Login
          // <a class="navbar-brand" href="#body">HourDeals</a>
          ul#navbaricons.navbar-nav.navbar-right
            li.nav-item
              a.nav-link.fa.fa-facebook-square(target='_blank', href='https://www.facebook.com/HourDeals')
            li.nav-item
              a.nav-link.fa.fa-instagram(target='_blank', href='https://www.instagram.com/HourDeals/')
            li.nav-item
              a.nav-link.fa.fa-youtube-play(target='_blank', href='#')
            li.nav-item
              a.nav-link.fa.fa-linkedin(target='_blank', href='#')
      section#coverpage.container-fluid.img-responsive
