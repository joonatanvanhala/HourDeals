      script.
        $('a[href^="#"]:not([data-toggle="tab"])').on('click', function(event) {
        var target = $(this.getAttribute('href'));
        if( target.length ) {
        event.preventDefault();
        $('html, body').stop().animate({
        scrollTop: target.offset().top
        }, 1500);
        }
        });
      script.
        window.sr = ScrollReveal();
        sr.reveal('.navbar',{
        duration: 2000,
        origin: 'bottom',
        distance: '20px',
        });
        sr.reveal('.container',{
        duration: 2000,
        origin: 'bottom',
        });
        sr.reveal('.text_right',{
        duration: 2000,
        origin: 'right',
        viewFactor: 0.5,
        distance: '100px',
        });
        sr.reveal('.text_left',{
        duration: 2000,
        origin: 'left',
        viewFactor: 0.5,
        distance: '100px',
        });
        sr.reveal('.text_bottom',{
        duration: 2000,
        origin: 'left',
        viewFactor: 0.3,
        distance: '100px'
        });
        sr.reveal('#contact_form',{
        duration: 2000,
        origin: 'right',
        viewFactor: 0.3,
        distance: '100px'
        });
        
