extends layout

block content
  ul
    each o,i in offer
      li
        a(href="/offers/"+o.OfferID)= o.OfferName

  form(method='POST', action='/offers/add')
    #form-group
      label Offer title:
      input(name='Name', type='text')
    #form-group
      label Description:
      textarea(name='Description', type = 'text')
    #form-group
      label Quantity:
      input(name='Quantity', type = 'text')
    #form-group
      label Discount (percentage):
      input(name='Discount', type = 'text')
    #form-group
      label Original price:
      input(name='OriginalPrice', type = 'text')
    #form-group
      label Category:
      input(name='CategoryID', type = 'text')
    br
    input(type='submit',value='Submit')
