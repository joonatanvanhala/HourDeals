extends layout

block content
  div(class ='offers')
    div(class = 'row')
      each o,i in offer
          if(i % 2 == 0)
            div(class = 'column')
              a(href="/businessuser/"+o.OfferID)= o.OfferName 
          if(i % 2 != 0)  
            div(class = 'column')
              a(href="/businessuser/"+o.OfferID)= o.OfferName 
        
  form(method='POST', action='/businessuser/add')
    #form-group
      label Offer title:
      input(name='Name', type='text')
    #form-group
      label Description:
      textarea(name='Description', type = 'text')
    #form-group
      label Quantity:
      input(name='Quantity', type = 'text')
    #form-group
      label Discount (percentage):
      input(name='Discount', type = 'text')
    #form-group
      label Original price:
      input(name='OriginalPrice', type = 'text')
    #form-group
      label Category:
      input(name='CategoryID', type = 'text')
    br
    input(type='submit',value='Submit')
