extends layout

block content
  h1 #{title}
  form(method='POST', action='offers/edit/'+offer._id)
    #form-group
      label Offer title:
      input(name='Name', type='text', value=offer.OfferName)
    #form-group
      label Description:
      textarea(name='Description', type = 'text' )
    #form-group
      label Quantity:
      input(name='Quantity', type = 'text')
    #form-group
      label Discount (percentage):
      input(name='Discount', type = 'text')
    #form-group
      label Original price:
      input(name='OriginalPrice', type = 'text')
    #form-group
      label Category:
      input(name='CategoryID', type = 'text')
    br
    input(type='submit',value='Submit')
