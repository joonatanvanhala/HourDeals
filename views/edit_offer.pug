extends layout

block content
  h1 #{title}
  form(method='POST', action='/businessusers/edit/'+offer.OfferID)
    #form-group
      label Offer title:
      input(name='Name', type='text', value=offer[0].OfferName)
    #form-group
      label Description:
      textarea(name='Description', type = 'text')=offer[0].Description
    #form-group
      label Quantity:
      input(name='Quantity', type = 'text', value=offer[0].Quantity)
    #form-group
      label Discount (percentage):
      input(name='Discount', type = 'text', value= offer[0].Discount)
    #form-group
      label Original price:
      input(name='OriginalPrice', type = 'text', value= offer[0].OriginalPrice)
    #form-group
      label Category:
      input(name='CategoryID', type = 'text', value= offer[0].CategoryID)
    br
    input(type='submit',value='Submit')
